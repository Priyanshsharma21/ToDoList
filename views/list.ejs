<%- include("header") -%>

<body>

  <div class="navi">
    <h1 class="navAb"><a href="/MeriJankari">About Us</a></h1>
  </div>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">


    <% listItems.forEach(element => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= element.id %>" onchange="this.form.submit()">
        <p>
          <%= element.Name %>
        </p>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </div>
    </form>

    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTodo" placeholder="New Item" autocomplete="off">
      <button type="submit" name="listSubmit" value=<%= listTitle %>>+</button>
    </form>
  </div>

</body>

<%- include("footer") -%>